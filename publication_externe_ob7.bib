@article{Baidai2020c,
  abstract = {The three major tropical tuna species are characterized by an aggregating behavior around floating objects, widely exploited by industrial purse seine fishery, which deploys thousands of floating objects each year, in order to improve their catches. These fish aggregating devices are generally equipped with echosounder buoys that collect acoustic data on the fish communities that aggregate around them. Using a classification model based on supervised learning algorithms, we were able to translate the acoustic data collected along the trajectories of 393 drifting FADs newly deployed in the Atlantic Ocean into presence or absence of tuna aggregation. Analysis of the resulting time series indicated that drifting FADs are colonized by tuna aggregation over an average of 21 days. The results also revealed, for the first time, that the residence time of a tuna aggregation around a single DFAD is about 9 days and that DFADs spend on average 7 days without tuna. Thus, DFADs appear to be occupied by tuna aggregation about 50 % of their soaking time. These metrics can be affected by seasonal variations.},
  author   = {Baidai, Y and Dagorn, Laurent and Amande, M.J. and Gaertner, D. and Capello, M.},
  journal  = {Collected Volume of Scientific Papers ICCAT},
  keywords = {behaviour,drifting fish aggregating devices,echosounders,fad,tropical tunas},
